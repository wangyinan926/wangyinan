/* pages/login/login.wxss */
.bottom{
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 1000rpx;
  width: 100%;
  bottom: 0;
}
.tips{
  margin: 500rpx auto 0;
  text-align: center;
  color: rgb(97, 91, 83);
}
.button{
  color: rgb(68, 61, 110);

}
page{
  height: 100%;
  overflow: hidden;
}
.downbox{
  /* opacity: 0.4; */
 
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  top:0;
}
.diao{
  position: relative;
  background: #ffffff;
  border-radius: 20rpx;
  width: 60%;
  min-height: 300rpx;
  text-align: center;
  padding:100rpx 50rpx;
}
.diao2{
   margin-top: 200rpx;
   text-align: center;
}
.down{
  animation:mymove 1s ;
  -webkit-animation:mymove 1s ; /*Safari and Chrome*/
}
@keyframes mymove
{
from {top:-200px;}
to {top:0px;}
}

@-webkit-keyframes mymove /*Safari and Chrome*/
{
from {top:-200px;}
to {top:0px;}
}