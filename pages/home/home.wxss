.divLine {
  background: #e0e3da;
  margin: 0 auto;
  width: 90%;
  height: 3rpx;
}

.arrows image {
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
  margin-left: 1000rpx;
}
.lists button{
  width: 100%;
  display: block;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
}
button::after {
  border: none;
  background-color: #fff;
}
.lists{
  width: auto;
  margin: 0 30rpx;
}
.content{
  width: 100% !important;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: left;
  margin: 0;
  padding: 0;
}
.down{
  animation:mymove 1s ;
  -webkit-animation:mymove 1s ; /*Safari and Chrome*/
}
.top{
  position: relative;
  opacity:1;
}
.show{
  animation:myshow 2s ;
  -webkit-animation:myshow 2s ; /*Safari and Chrome*/
}
@keyframes myshow
{
  0%{
    opacity: 0;
  }
  20%{
    opacity: 0;
  }
  40%{
    opacity: 0.3;
  }
  100%{
    opacity: 1;
  }
}
@-webkit-keyframes myshow
{
  from{
    opacity: 0;
  }
  to{
    opacity: 1;
  }
} /*Safari and Chrome*/

@keyframes mymove
{
from {top:-200px;}
to {top:0px;}
}

@-webkit-keyframes mymove /*Safari and Chrome*/
{
from {top:-200px;}
to {top:0px;}
}
.none{
  display: none;
}