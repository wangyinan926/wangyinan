}

.list-wrapper {
  width: 65%;
  margin: 0 auto;
  background: #fff;
  border: 1rpx solid #e0e3da;
  border-radius: 18rpx;
  position: relative;
  /* bottom: -200px//;/ */
}

.avatar-wrapper .avatar {
  margin: 100rpx auto 0;
  text-align: center;
}

.avatar-wrapper .avatar image {
  width: 200rpx;
  height: 200rpx;
}

.avatar-wrapper .text {
  text-align: center;
  color: #fff;
}

.listimg image {
  margin-right: 15rpx;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}

